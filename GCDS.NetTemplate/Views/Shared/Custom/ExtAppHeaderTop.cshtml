@using GCDS.NetTemplate.Components.Custom

@model ExtAppHeaderTop

<gcds-container size="xl"
				centered
				main-container
				style="@Model.StyleOverride">
	<gcds-grid columns="2fr 1fr"
			   align-items="center"
			   place-content="space-between">

		@await Html.PartialAsync("Custom/ExtSiteTitle", Model.SiteTitle)

		@{
			Model.LanguageToggle.StyleOverride += "text-align:end";
		}
		@await Html.PartialAsync("Gcds/GcdsLangToggle", Model.LanguageToggle)

	</gcds-grid>

</gcds-container>